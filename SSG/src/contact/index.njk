        <div class="container --flare-background-2"><h1>Let's Have<br>A Chat</h1></div>
        <div class="imgWrapper">
        </div>
    </section>

    <section class="contactForm --flare-background-6" id="quote">
        <div class="container">
            <div class="contactInfo">
                <div class="top">
                    <h2 class="--typo-formH2Small">Contact Info</h2>
                    <p class="--typo-pSmall">Got a project or urgent repair? Reach out via phone, email, or our contact form. Ottawa Elite Construction is ready to help with your specific needs.</p>
                    <br>
                    <p class="--typo-cell">Servicing All of Ottawa and Surrounding Areas!</p>
                </div>
                <address>
                    <a href="tel:+13433362724" class="contactCard --typo-cell2" type=""><img src="/assets/phone_icon.svg" alt=""><div class="info"><span class="--flare-text-1">Issak (Owner) Cellphone</span>  -  (343) 336-2724</div></a>
                    {# <a href="tel:+18197242229" class="contactCard --typo-cell2" type=""><img src="/assets/phone_icon.svg" alt=""><div class="info"><span class="--flare-text-1">Zena (Assistant) Cellphone</span>  -  (819) 724-2229</div></a> #}
                    <a href="mailto:Issak@OttawaEliteConstruction.ca" class="contactCard --typo-cell2" type=""><img src="/assets/email_icon.svg" alt=""><div class="info"><span class="--flare-text-1">Email</span>  -  Issak@OttawaEliteConstruction.ca</div></a>
                    <div class="contactCard --typo-cell2"><img src="/assets/address_icon.svg" alt=""><div class="info"><span class="--flare-text-1">Address</span>  -  1826 Robertson Rd, Nepean, ON K2H 5Z6</div></div>
                    <div class="contactCard --typo-cell2"><img src="/assets/hours_icon.svg" alt=""><div class="info"><span class="--flare-text-1">Hours</span>  -  Monday-Saturday 8-4pm</div></div>
                </address>
            </div>
        </div>
        <div class="separator"></div>
        <form name="contact" netlify >
            <h2 class="--typo-formH2Big">Request A <span class="--flare-text-1">Quote</span> Or Send Us A <span class="--flare-text-1">Message</span></h2>
            <div class="inpCard">
                <label class="--typo-inputLabel" for="name">Full Name</label>
                <input class="--typo-inputText" type="text" name="name" id="">
            </div>
            <div class="inpCard">
                <label class="--typo-inputLabel" for="phone">Phone Number</label>
                <input class="--typo-inputText" type="tel" name="phone" id="">
            </div>
            <div class="inpCard">
                <label class="--typo-inputLabel" for="email">Email</label>
                <input class="--typo-inputText" type="email" name="email" id="">
            </div>
            <div class="inpCard">
                <label class="--typo-inputLabel" for="message">Message</label>
                <textarea class="--typo-inputText" name="message" id="" cols="30" rows="10"></textarea>
            </div>
            <button class="--btn-submit --typo-btn1" type="submit">Send</button>
        </form>
    </section>
